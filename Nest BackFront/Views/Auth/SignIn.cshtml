@using Nest_BackFront.ViewModels.Authorization
@model SignInVM
@{
    ViewData["Title"] = "SignIn";
}
<div class="page-header breadcrumb-wrap">
    <div class="container">
        <div class="breadcrumb">
            <a href="index.html" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
            <span></span> Pages <span></span> My Account
        </div>
    </div>
</div>
<div class="page-content pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Create an Account</h1>
                                    <p class="mb-30">Hesab Lazimdr <a asp-action="Register">Qeydiyyatdan kecin</a></p>
                                </div>
                                <form method="post">
                                    <div class="form-group row">
                                        <div class="col">
                                            <input asp-for="UsernamOrEmail" class="form-control" placeholder="Istifadeci ve ya Email unvaninizi qeyd edin ">
                                            <span class="text-danger" asp-validation-for="UsernamOrEmail"></span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Password" class="form-control" placeholder="Password">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div>
                                        <label asp-for="RememberMe" class="form-check-label mr-10">Bot olm ala </label><input asp-for="RememberMe" class="form-check-input">
                                        <span class="text-danger" asp-validation-for="RememberMe"></span>
                                    </div>
                                    <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Submit &amp; Register</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationPartial.cshtml" />
}

