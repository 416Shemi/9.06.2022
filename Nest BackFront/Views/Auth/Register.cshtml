@using Nest_BackFront.ViewModels.Authorization
@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="page-header breadcrumb-wrap">
    <div class="container">
        <div class="breadcrumb">
            <a href="index.html" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
            <span></span> Pages <span></span> My Account
        </div>
    </div>
</div>
<div class="page-content pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="login_wrap widget-taber-content background-white">
                            <div class="padding_eight_all bg-white">
                                <div class="heading_s1">
                                    <h1 class="mb-5">Create an Account</h1>
                                    <p class="mb-30">Movcud hesabiniz varmi? <a asp-action="SignIn">Daxil olun</a></p>
                                </div>
                                <form method="post">
                                    <div class="form-group row">
                                        <div class="row">
                                            <div class="col">
                                                <input asp-for="Firstname" class="form-control" placeholder="First name">
                                                <span class="text-danger" asp-validation-for="Firstname"></span>
                                            </div>
                                            <div class="col">
                                                <input asp-for="Lastname" class="form-control" placeholder=" Last name">
                                                <span class="text-danger" asp-validation-for="Lastname"></span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <input asp-for="Username" class="form-control" placeholder="User name ">
                                            <span class="text-danger" asp-validation-for="Username"></span>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Email" class="form-control" placeholder="Email name">
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="col">
                                        <input asp-for="Password" class="form-control" placeholder="Password">
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="col">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
                                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                    </div>

                                    <button type="submit" class="btn btn-fill-out btn-block hover-up font-weight-bold" name="login">Submit &amp; Register</button>
                                </form>
                            </div>
                        </div>
                    </div>
                   
                    </div>
                </div>
            </div>
        </div>
    </div>
@section scripts{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationPartial.cshtml" />
 }


